{% extends '@EasyAdmin/page/content.html.twig' %}
{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>Statistics</h1>

                <table class="table table-striped table-bordered">
                    <thead>
                    <tr>
                        <th>Recipients Count</th>
                        <th>Newsletter Messages Sent Count</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td>{{ numberOfRecipients }}</td>
                        <td>{{ numberOfNewslettersSent }}</td>
                    </tr>
                    </tbody>
                </table>
                <a href="{{ path('app_admin_index') }}" class="btn btn-default">Go back</a>
            </div>
        </div>
    </div>
{% endblock %}